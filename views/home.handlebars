<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> News Scraper</h1>
        </div>

    </div>


     <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card mt-3">
                <div class="card-header">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="card-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save</button>
                </div>
            </div>
            
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
            <h4>No Article to show</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>
